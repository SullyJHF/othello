# Environment configuration for Othello game

# Basic server configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Debug configuration (development utilities)
# Master switch - if false, all debug features are disabled
NODE_DEBUG_ENABLED=true
REACT_APP_DEBUG_ENABLED=true

# Individual debug features
NODE_DEBUG_DUMMY_GAME=true
REACT_APP_DEBUG_DUMMY_GAME=true

NODE_DEBUG_AUTO_PLAY=true
REACT_APP_DEBUG_AUTO_PLAY=true

NODE_DEBUG_GAME_INSPECTOR=false
REACT_APP_DEBUG_GAME_INSPECTOR=false

NODE_DEBUG_PERFORMANCE=false
REACT_APP_DEBUG_PERFORMANCE=false